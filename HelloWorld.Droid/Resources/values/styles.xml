<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Activity" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/ActionBar</item>
  </style>
  <style name="AppCompatActivity" parent ="@style/Theme.AppCompat.Light">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorButtonNormal">@color/header_background</item>
    <item name="colorControlHighlight">@color/header_background_accent</item>
    
    <!--   your app branding color for the app bar -->
    <!--<item name="android:colorPrimary">@color/primary</item>-->
    <!--   darker variant for the status bar and contextual app bars -->
    <!--<item name="android:colorPrimaryDark">@color/primary_dark</item>-->
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/header_background_accent</item>
  </style>

	<style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
		
	</style>
  <style name="FullScreenActivity" parent="@android:style/Theme.Holo.Light.NoActionBar">
    <item name="android:windowBackground">@color/black</item>
    <item name="android:colorBackground">@color/black</item>
  </style>
  <style name="Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
  </style>
  <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
    <item name="android:icon">@android:color/transparent</item>
  </style>
  <style name="Button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:textSize">40sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:background">@drawable/btn_blue</item>
  </style>
  <style name="LabelText">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">20sp</item>
  </style>
  <style name="LabelSmall">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">15sp</item>
  </style>
  <style name="LabelBold">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="SingleLineEditText">
    <item name="android:lines">1</item>
    <item name="android:inputType">text</item>
    <item name="android:textColor">@drawable/text_color_selector</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  <style name="PasswordSingleLineEditText" parent="@style/SingleLineEditText">
    <item name="android:inputType">textPassword</item>    
  </style>
  <style name="ListView" parent="@android:style/Widget.Holo.Light.ListView">
    <item name="android:divider">@color/list_divider</item>
    <item name="android:dividerHeight">1dp</item>
    <item name="android:background">@drawable/pnl_blue</item>
  </style>
  <style name="PagerTitleStrip">
    <item name="android:textSize">24sp</item>
    <item name="android:background">@color/header_background</item>
    <item name="android:textColor">@color/header_text</item>
  </style>

  <style name="PagerSubTitleStrip">
    <item name="android:textSize">18sp</item>
    <item name="android:background">@color/header_background</item>
    <item name="android:textColor">@color/header_text</item>
  </style>

  <style name="SlidingTabTitleStrip" parent ="@android:style/Widget.Holo.Light.TabWidget">
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@drawable/header_text_selector</item>
  </style>
  
  <style name="TabViewText" parent="@android:style/TextAppearance.Widget.TabWidget">
    <item name="android:textColor">#000000</item>
     <item name="android:textSize">18sp</item>
    <item name="android:selectAllOnFocus">true</item>
  </style>
  
  <style name="SmallText" parent="@android:style/TextAppearance.Small">    
  </style>
  
  <style name="CardStyle" parent="Theme.AppCompat.Light">
    <item name="cardCornerRadius">4dp</item>
    <item name="cardElevation">2dp</item>
    <item name="contentPaddingBottom">24dp</item>
    <item name="contentPaddingTop">24dp</item>
    <item name="contentPaddingLeft">16dp</item>
    <item name="contentPaddingRight">16dp</item>
    <item name="cardUseCompatPadding">true</item>
  </style>
  
  <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorButtonNormal">@color/header_background</item>
    <item name="colorControlHighlight">@color/header_background_accent</item>
    <item name="colorAccent">@color/header_background_accent</item>
  </style>
  
  <style name="Progress" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/header_background_accent</item>
  </style>

  <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
    <item name="android:padding">20dp</item>
    <item name="android:background">@null</item>
    <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
  </style>
  <style name="DrawerItem">
    <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    <item name="android:textColor">@drawable/text_color_selector</item>
    <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
  </style>
  <style name="MediumText" parent="@android:style/TextAppearance.Medium">
    <item name="android:textColor">#000000</item>
  </style>
</resources>