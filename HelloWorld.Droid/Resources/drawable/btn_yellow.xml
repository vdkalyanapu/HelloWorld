<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#C1C1C1" />
      <stroke
          android:width="1dp"
          android:color="#A0A0A0" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#E5E5E5"
          android:endColor="#C1C1C1"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#C1C1C1" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>